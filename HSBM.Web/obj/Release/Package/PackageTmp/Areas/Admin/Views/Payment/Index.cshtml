@model HSBM.EntityModel.SystemUsers.SystemUsers
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}





@using (Html.BeginForm("PaymentGetway", "Payment", FormMethod.Post))
{
    <div class="form-horizontal">


        <div class="col-md-6">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    User : @Model.UserName
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    Email : @Model.Email
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    Amount :  $ <input type="text" name="Amount" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    Paypal <input type="radio" id="paymentTypeId" value="1" checked="checked" name="paymentTypeId" />
                </div>
                <div class="col-md-offset-2 col-md-10">
                    CCAvenue  <input type="radio" id="paymentTypeId" value="2" name="paymentTypeId" />
                </div>
                <div class="col-md-offset-2 col-md-10">
                    Sagepay <input type="radio" id="paymentTypeId" value="3" name="paymentTypeId" />
                </div>
                <div class="col-md-offset-2 col-md-10">
                    AuthorizeNet <input type="radio" id="paymentTypeId" value="4" name="paymentTypeId" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Pay" class="btn btn-success" />
                    @Html.ActionLink("Cancel", "Subuser", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}



