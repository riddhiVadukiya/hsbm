@model HSBM.EntityModel.CurrencyMaster.CurrencyMaster

@{
    if (Model.Id > 0)
    {
        ViewBag.Title = "Update Currency";
    }
    else
    {
        ViewBag.Title = "Add Currency";
    }


    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddUpdateCurrency", "Currency", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal x_panel">
        @*<h4>CurrencyMaster</h4>
        <hr />*@
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group mt10">
            @Html.LabelFor(model => model.CurrencyName, new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.CurrencyName, new { @class = "form-control", maxlength = "50" })
                @Html.ValidationMessageFor(model => model.CurrencyName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CurrencyCode, new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.CurrencyCode, new { @class = "form-control", maxlength = "50" })
                @Html.ValidationMessageFor(model => model.CurrencyCode)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Value, new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Value, new { @class = "form-control", @type="number", @step="0.01" })
                @Html.ValidationMessageFor(model => model.Value)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.IsActive, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IsActive)
            </div>
        </div>

        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}

