@{
    ViewBag.Title = "Register";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLoginSignup.cshtml";
}

<div class="login_wrapper register-form" ng-controller="RegisterController">
    <div id="register" class="animate form login_form">
        <section class="login_content">
            <form>
                <h1><img src="@System.Configuration.ConfigurationManager.AppSettings["LogoPath"].ToString()" alt="@System.Configuration.ConfigurationManager.AppSettings["SiteName"].ToString()"></h1>
                <h3>Register</h3>
                @*<div class="form-group">
                    <input type="text" class="form-control" ng-model="model.UserName" placeholder="User Name" name="UserName" />
                </div>*@
                <div class="form-group">
                    <input type="password" class="form-control" ng-model="model.Password" placeholder="Password" name="Password" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" ng-model="model.FirstName" placeholder="First Name" name="FirstName" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" ng-model="model.LastName" placeholder="Last Name" name="LastName" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" ng-model="model.Email" placeholder="Email" name="Email" />
                </div>
                <div class="buttongroup">
                    <input type="submit" ng-click="singup()" class="btn green-btn" value="Register">
                    <p class="change_link"> Already a member ? <a href="/Admin/Account/Login" class="to_register"> Login </a> </p>
                </div>
            </form>
            @Html.Partial("_LoginFooter")
        </section>
    </div>
</div>

