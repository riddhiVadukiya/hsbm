@model IEnumerable<HSBM.EntityModel.SystemUsers.SystemUsers>
@using HSBM.Common.Utils;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="main-wrapper">
    <h3>Customers</h3>
    <div ng-controller="CustomerController" class="inner-content filter-button-set">
        @using (Html.BeginForm("Export", "Customer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <input type="hidden" class="form-control" ng-model="Search.CustomerName" id="CustomerName" name="CustomerName" />
            <div class="row">
                <div class="col-xs-12 col-sm-4 col-md-4">
                    <div class="form-group">
                        <label class="control-label">Customer Name</label>
                        <input type="text" ng-model="Search.UserName" class="form-control" id="UserName" name="UserName" />
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <div class="filter-button-set">
                        <div class="buttongroup">
                            <input type="button" ng-click="SearchData()" value="Search" class="btn green-btn" />
                            <input type="button" ng-click="ResetData()" value="Reset" class="btn black-btn" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="ln_solid"></div>
            @*<input type="submit" ng-click="ExportData()" value="Export" class="btn green-btn" />*@
            <div id="Customer_NoRecordFoundButton" class="buttongroup" style="margin:0px;">
                <input type="submit" name="btnExport" value="Export" class="btn green-btn pull-right" onkeypress="return event.keyCode != 13;" />
                <div class="col-xs-6 col-sm-6 col-md-6 pull-right">
                    <div class="form-group">

                        <select id="ExportTypeExcel"
                                name="ExportTypeExcel"
                                required>
                            <option value="0">CSV</option>
                            <option value="1">Excel</option>
                        </select>
                    </div>
                </div>
            </div>
        }
        <table id="Customer" class="table table-bordered table-striped table-responsive row-border hover bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Customer Name</th>
                    @*<th>Last Name</th>*@
                    <th>Email</th>
                    <th>Mobile</th>
                    @* <th>Gender</th>
                        <th>Status</th>*@
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <div id="Customer_NoRecordFound" class="empty-grid">No records found</div>
    </div>
</div>

