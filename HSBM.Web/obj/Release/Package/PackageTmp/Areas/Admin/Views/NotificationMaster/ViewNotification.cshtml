@model HSBM.EntityModel.Notification.Notification
@using HSBM.Common.Utils;

@{
    ViewBag.Title = "View Notification";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()
<h2>@ViewBag.Title</h2>
<div class="form-horizontal x_panel">
    @*<h4>View Notification </h4>
    <hr />*@

    @Html.HiddenFor(model => model.Id)

    <div class="form-group mt10">
        @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @readonly = "true" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Message, new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.Message, new { @class = "form-control", @readonly = "true" } )
        </div>
    </div>

    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-3">
            @Html.ActionLink("Back", "List", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>

