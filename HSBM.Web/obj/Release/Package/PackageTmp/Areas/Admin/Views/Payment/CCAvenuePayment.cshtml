@model HSBM.EntityModel.PaymentGetWay.CCAvenueRequest
@{
    ViewBag.Title = "CCAvenuePayment";
    Layout = "~/Views/Shared/_LayoutFrontEnd.cshtml";
}

<h2>CCAvenue Payment</h2>

<form method="post" id="frmPaypal" name="redirect" action="@Model.CCAvenueUrl">

    <input type="hidden" id="encRequest" name="encRequest" value="@Model.EncRequest" />
    <input type="hidden" name="access_code" id="Hidden1" value="@Model.AccessCode" />
    <input id="btnSubmit" type="image" name="submit" class="display-none" />
</form>

<script type="text/javascript">
    document.getElementById("btnSubmit").click()
</script>