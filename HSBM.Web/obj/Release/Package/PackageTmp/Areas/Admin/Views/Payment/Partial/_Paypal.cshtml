@model HSBM.EntityModel.Paypal.PaypalPaymentRequest
@{
    Layout = null;
}

<form method="post" id="frmPaypal" action="@Model.FormUrl">
    <input type="hidden" name="cmd" value="_xclick" />
    <input type="text" name="business">
    <input type="text" name="item_name">
    <input type="text" name="quantity" />
    @*<input type="hidden" name="custom" value="OrderDetailKey=@Model.OrderDetailKey|IsSupplier=@Model.IsSupplier" />*@
    <input type="hidden" name="custom" value="@Model.Custom" />
    <input type="hidden" name="currency_code" value="@Model.currency_code" />
    <input type="hidden" name="amount" value="@Model.TotalAmount" />
    <input type="hidden" name="tax" value="" />
    <input type="hidden" name="first_name" value="@Model.FirstName" />
    <input type="hidden" name="last_name" value="@Model.LastName" />
    <input type="hidden" name="address1" value="@Model.Address1" />
    <input type="hidden" name="address2" value="@Model.Address2" />
    <input type="hidden" name="city" value="@Model.City" />
    <input type="hidden" name="state" value="@Model.StateName" />
    <input type="hidden" name="zip" value="@Model.Zipcode" />
    <input type="hidden" name="country" value="@Model.CountryName" />
    <input type="hidden" name="notify_url" value="@Model.notify_url" />
    <input type="hidden" id="returnUrl" name="return" value="@Model.return_url" />
    @*<input type="hidden" name="return" value="@ConfigurationManager.AppSettings["BookPackageReturnURl"]" />*@
    <input type="hidden" name="email" value="@Model.EmailAddress" />
    <input type="hidden" name="cancel_return" value="@Model.cancel_return" />
    <input id="btnSubmit" type="image" name="submit" class="display-none" />

</form>

<script type="text/javascript">
    document.getElementById("btnSubmit").click()
</script>
