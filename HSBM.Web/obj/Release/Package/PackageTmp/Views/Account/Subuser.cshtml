@model IEnumerable<HSBM.EntityModel.SystemUsers.SystemUsers>

@{
    ViewBag.Title = "Subuser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Subuser</h2>
<div ng-controller="SubuserController">
    <p>
        @Html.ActionLink("Create New", "AddSubuser", null, new { @class = "btn btn-primary pull-right" })
    </p>

    <table id="Subuser" class="table table-bordered table-striped table-responsive row-border hover bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Gender</th>
                <th>IsActive</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    <div id="Subuser_NoRecordFound" class="empty-grid">No records found</div>
</div>

