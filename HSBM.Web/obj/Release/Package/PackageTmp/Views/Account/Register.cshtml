@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutLoginSignup.cshtml";
}

<div ng-controller="RegisterController">

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Signup</h4>
        <hr />
        @*<div class="form-group">
            <label class="col-md-2 control-label">User Name</label>
            <div class="col-md-4">
                <input class="form-control" type="text" ng-model="model.UserName" />
            </div>
        </div>*@

        <div class="form-group">
            <label class="col-md-2 control-label">Password</label>
            <div class="col-md-4">
                <input class="form-control" type="password" ng-model="model.Password" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">FirstName</label>
            <div class="col-md-4">
                <input class="form-control" type="text" ng-model="model.FirstName" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">LastName</label>
            <div class="col-md-4">
                <input class="form-control" type="text" ng-model="model.LastName" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Email</label>
            <div class="col-md-4">
                <input class="form-control" type="text" ng-model="model.Email" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Join" ng-click="singup()" class="btn btn-default" />
            </div>
        </div>
    </div>

</div>



