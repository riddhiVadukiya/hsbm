@model IEnumerable<HSBM.EntityModel.Blogs.BlogCategory>

@{
    ViewBag.Title = "Blog Categories";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Blog Categories</h2>
<div ng-controller="BlogCategoryController">
    <p>
        @Html.ActionLink("Add Blog Category", "AddBlogCategory", null, new { @class = "btn btn-primary pull-right" })
    </p>

    <table id="BlogCategory" class="table table-bordered table-striped table-responsive row-border hover bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    <div id="BlogCategory_NoRecordFound" class="empty-grid">No records found</div>
</div>
