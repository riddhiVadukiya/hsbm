@model HSBM.EntityModel.CountryMaster.CountryMaster

@{
    if (Model.Id > 0)
    {
        ViewBag.Title = "Update Country";
    }
    else
    {
        ViewBag.Title = "Add Country";
    }



    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddUpdateCountry", "Locations", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal x_panel">
        @*<h4>CountryMaster</h4>*@
        @*<hr />*@
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group mt10">
            @Html.LabelFor(model => model.CountryName, new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.CountryName, new { @class = "form-control", maxlength = "50" })
                @Html.ValidationMessageFor(model => model.CountryName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Code, new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Code, new { @class = "form-control", maxlength = "50" })
                @Html.ValidationMessageFor(model => model.Code)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Latitude, new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Latitude, new { @class = "form-control", maxlength = "50" })
                @Html.ValidationMessageFor(model => model.Latitude)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Longitude, new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Longitude, new { @class = "form-control", maxlength = "50" })
                @Html.ValidationMessageFor(model => model.Longitude)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.IsActive, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IsActive)
            </div>
        </div>
        <div class="ln_solid"></div>
        <div class="form-group mt20">
            <div class="col-md-offset-2">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Cancel", "Country", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}

