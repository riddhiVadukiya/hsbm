                                }
                                else {
                                    return false;
                                }
                            },
                            error: function (xhr, ajaxOptions, thrownError) {
                                return false;
                            }
                        });


                    }
                    else {

                        $("#dvLoginErrorMsg").html(data.Message);
                        $("#dvLoginErrorMsg").show();
                        return false;
                    }
                },
                error: function (xhr, ajaxOptions, thrownError) {
