                        $("#dvLoginErrorMsg").hide();
                        $('#loginModal').modal('hide');

                        //window.location.reload();
                        //if (window.location.pathname == '/Blogs/Detail') {
                        //    alert("1");
                        //    //$("#btncommit").trigger('click');
                        //}
                        //else {
                        //    window.location.reload();
                        //}
                        $.ajax({
                            url: '/Blogs/AddBlogComment',
                            type: 'POST',
                            cache: false,
