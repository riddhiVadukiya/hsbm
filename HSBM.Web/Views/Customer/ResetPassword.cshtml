@model HSBM.EntityModel.ForgotPassword.ResetPasswordModel

@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="awe-parallax login-page-demo" id="loginForm">
    <div class="awe-overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="login-register-page__content">
                    @using (Html.BeginForm("ResetPassword", "Customer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <h4>Reset Passoword</h4>
                        <hr />
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-item">
                            @Html.LabelFor(m => m.NewPassword)

                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.NewPassword)

                        </div>
                        <div class="form-item">
                            @Html.LabelFor(m => m.ConfirmPassword)

                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)

                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Set password" class="btn btn-default" />
                            </div>
                        </div>
                    }
            @*<div class="login-register-link">
                        Don't have account yet? <a href="@Url.Action("CustomerRegister", "Customer")">Register HERE</a>
            </div>*@
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
        
    </div>

</section>
