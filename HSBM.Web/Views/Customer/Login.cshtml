@model HSBM.EntityModel.SystemUsers.LoginUser

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="awe-parallax login-page-demo" id="loginForm">
    <div class="awe-overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="login-register-page__content">
                    @using (Html.BeginForm("Login", "Customer", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <h5>Customer Log in</h5>
                        <hr />
                        <div class="form-group ">
                            <h6> @ViewBag.Message</h6>
                        </div>
                        <div class="form-item">
                   <label>Email</label> 
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserName, null, new { @class = "color-red" })
                        </div>
                        <div class="form-item">
                            @Html.LabelFor(model => model.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Password, null, new { @class = "color-red" })
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12 text-center">
                                <input type="submit" value="Log in" class="btn btn-primary btn-lg" />
                                <a href="/Customer/ForgotPassword" class="ml-20">Forgot Password</a>
                            </div>
                        </div>
                    }
                    @*<div class="login-register-link">
                        Don't have account yet? <a href="@Url.Action("CustomerRegister", "Customer")">Register HERE</a>
                    </div>*@
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</section>

